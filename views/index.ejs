 	<!-- styles -->
 	<link type="text/css" href="stylesheets/style.css" rel="stylesheet">

 	<link type="text/css" href="stylesheets/index.css" rel="stylesheet">
 	
 	<style type="text/css">
 		div.title_field {
 			z-index : 2;
 			position: fixed;
 			left : 0%;
 			width: 75%;
 			padding : 1em;
 			margin : 0em;
 		}
 		.title_text {
 			font-size : 2em;
 			font-weight : bold;
 		}
 		.login_field {
 			position :fixed;
 			z-index : 2;
 			padding :0;
 			margin : 0;
 			right : 0;
 			width: 25%;
 		}
 		.first {
 			position : absolute;
 			left: 10%;
 			margin : 0;
 			width: 30%;
 		}
 		.second {
 			position : absolute;
 			right: 10%;
 			margin : 0;
 			width: 30%;
 		}
 		.first img,
 		.second img{
 			width  :  80%;
 			height : auto;
 		}
 		div.index_img {
 			margin : 0;
 			padding: 0;
 			position: relative;
 			top : 5em;
 		}
 		div.index_img img {
 			z-index : 1;
 			width : 100%;
 			height: auto;
 		}
 		
 	</style>
</head>
<body>
  <div class="index_container">
    <div class="svg_img">
      <svg width=100% height=100%>
        <defs>
          <filter id='Blur'>
            <feGaussianBlur in="SourceGraphic" stdDeviation=1 />
          </filter>
          <mask id='mask_three_line'>
            <rect x=0 y=0% width=100% height=33% fill=white />
            <rect x=0 y=33% width=100% height=33% fill=gray />
            <rect x=0 y=66% width=100% height=34% fill=red />
          </mask>
        </defs>

        <image x=0 y=0 width=100% height=100% xlink:href='images/index_img.jpg'  mask='url(#mask_three_line)' filter='url(#Blur)'/>
      </svg>
    </div>

  </div>


